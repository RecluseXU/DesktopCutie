		<动作 id="闲置站立转闲置坐" 资源id="闲置_站to闲置_坐" 逻辑id="闲置站立转闲置坐逻辑"/>
		<动作 id="闲置坐下" 资源id="闲置_坐" 逻辑id="闲置坐下逻辑"/>
		<动作 id="闲置坐下转身" 资源id="闲置_坐_转身" 逻辑id="闲置坐下转身逻辑"/>
		<动作 id="闲置坐转闲置站立" 资源id="闲置_坐to闲置_站立" 逻辑id="闲置坐转闲置站立逻辑"/>
		
