	<初始动画 动作id="出场空中落下" />
	<!-- 悬挂点:当点住鼠标时，动画图像悬挂点会移动到鼠标处 -->
	<鼠标动画>
		<点击>
			<转换 键位="左键" 当前动画id="闲置站立" 动作id="悬挂静置序" 悬挂点="69,28"/>
			<转换 键位="左键" 当前动画id="浮空" 动作id="悬挂静置" 悬挂点="69,28"/>
			<转换 键位="右键" 当前动画id="闲置站立" 动作id="闲置站立转身"/>
			<转换 键位="右键" 当前动画id="闲置坐下" 动作id="闲置坐下转身"/>
		</点击>
		<释放>
			<转换 键位="左键" 条件="不在地上" 当前动画id="悬挂静置序" 动作id="浮空" 取消悬挂="是"/>
			<转换 键位="左键" 条件="不在地上" 当前动画id="悬挂静置" 动作id="浮空" 取消悬挂="是"/>
		</释放>
		<鼠标滚轮>
			<转换 滚轮方向="向上" 条件="在地上" 当前动画id="闲置坐下" 动作id="闲置坐转闲置站立"/>
			<转换 滚轮方向="向下" 条件="在地上" 当前动画id="闲置站立" 动作id="闲置站立转闲置坐" />
		</鼠标滚轮>
	</鼠标动画> 
	
	
	
	
	<动作逻辑>
	<!--
		下一个动作：指定下一个动作。
		逻辑更替：填入的逻辑将会取代现有的逻辑。
		状态修改：修改状态，会在动画播放完后执行
	-->
		<逻辑 id="出场空中_下落逻辑">
			<下一个动作 动作id="出场空中落下"  发生频率="1"/>
			<逻辑更替 发生条件="在地上" 逻辑id="出场空中_到达地面逻辑" 强制更替="是" />
		</逻辑>
		<逻辑 id="出场空中_到达地面逻辑" >
			<下一个动作 动作id="出场落地" 发生频率="1"/>
		</逻辑>		
		<逻辑 id="出场空中_到达地面逻辑">
			<下一个动作 动作id="出场落地" 发生频率="1"/>
		</逻辑>
		<逻辑 id="出场落地逻辑">
			<下一个动作 动作id="闲置站立" 发生频率="1"/>
		</逻辑>
		
		<逻辑 id="闲置站立逻辑">
			<下一个动作 动作id="闲置站立" 发生频率="99" />
			<下一个动作 动作id="闲置站立转身" 发生频率="1"/>
			<下一个动作 动作id="闲置站立转闲置坐" 发生频率="1"/>
		</逻辑>
		<逻辑 id="闲置站立转身逻辑">
			<下一个动作 动作id="闲置站立" 发生频率="1"/>
			<状态修改 水平翻转="相反" />
		</逻辑>
		<逻辑 id="闲置站立转闲置坐逻辑">
			<下一个动作 动作id="闲置坐下" 发生频率="1"/>
		</逻辑>
		<逻辑 id="闲置坐下逻辑">
			<下一个动作 动作id="闲置坐下" 发生频率="99"/>
			<下一个动作 动作id="闲置坐下转身" 发生频率="1"/>
			<下一个动作 动作id="闲置坐转闲置站立" 发生频率="1"/>
		</逻辑>
		<逻辑 id="闲置坐下转身逻辑">
			<下一个动作 动作id="闲置坐下" 发生频率="1"/>
			<状态修改 水平翻转="相反" />
		</逻辑>
		<逻辑 id="闲置坐转闲置站立逻辑">
			<下一个动作 动作id="闲置站立" 发生频率="1"/>
		</逻辑>
		<逻辑 id="悬挂静置序逻辑">
			<下一个动作 动作id="悬挂静置" 发生频率="1"/>
			<状态修改 在地上="否"/>
		</逻辑>
		<逻辑 id="悬挂静置逻辑">
			<下一个动作 动作id="悬挂静置" 发生频率="1"/>
		</逻辑>
		<逻辑 id="浮空逻辑">
			<下一个动作 动作id="浮空" 发生频率="1"/>
			<动作更替 发生条件="在地上" 动作id="浮空落地" 强制更替="是" />
		</逻辑>
		<逻辑 id="浮空落地逻辑">
			<下一个动作 动作id="闲置站立" 发生频率="1"/>
		</逻辑>
	</动作逻辑>
	
